@{
    ViewData["Title"] = "Create Position";
}

<h1 class="text-center">Create Position</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Positions" asp-action="Create" method="post">
    <div class="form-group">
        <label for="positionName">Position Name</label>
        <input type="text" class="form-control" id="positionName" placeholder="Position Name..." name="positionName" required="true" maxlength="30">
    </div>
    <hr class="bg-secondary half-width" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary me-1">Create</button>
        <a class="btn btn-primary ms-1" asp-controller="Positions" asp-action="All">View All</a>
    </div>
</form>