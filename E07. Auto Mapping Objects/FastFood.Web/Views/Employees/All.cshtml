@model IList<FastFood.Web.ViewModels.Employees.EmployeesAllViewModel>

@{
    ViewData["Title"] = "All Employees";
}
<h1 class="text-center">@ViewData["Title"]</h1>
<hr class="hr-2" />
<table class="table">
    <thead>
        <tr class="row justify-content-center">
            <th class="col-md-1">#</th>
            <th class="col-md-2">Name</th>
            <th class="col-md-2">Age</th>
            <th class="col-md-2">Address</th>
            <th class="col-md-2">Position</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count(); i++)
        {
            <tr class="row justify-content-center">
                <th class="col-md-1">@(i + 1)</th>
                <td class="col-md-2">@Model[i].Name</td>
                <td class="col-md-2">@Model[i].Age</td>
                <td class="col-md-2">@Model[i].Address</td>
                <td class="col-md-2">@Model[i].Position</td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-center">
    <a class="btn btn-primary ms-1" asp-controller="Employees" asp-action="Register">Register</a>
</div>