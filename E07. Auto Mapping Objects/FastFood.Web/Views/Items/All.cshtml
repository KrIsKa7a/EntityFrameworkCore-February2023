@model IList<FastFood.Web.ViewModels.Items.ItemsAllViewModel>

@{
    ViewData["Title"] = "All Items";
}
<h1 class="text-center">@ViewData["Title"]</h1>
<hr class="hr-2" />
<table class="table">
    <thead>
        <tr class="row justify-content-center">
            <th class="col-md-1">#</th>
            <th class="col-md-2">Name</th>
            <th class="col-md-2">Price</th>
            <th class="col-md-2">Category</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count(); i++)
        {
            <tr class="row justify-content-center">
                <th class="col-md-1">@(i + 1)</th>
                <td class="col-md-2">@Model[i].Name</td>
                <td class="col-md-2">@Model[i].Price</td>
                <td class="col-md-2">@Model[i].Category</td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-center">
    <a class="btn btn-primary ms-1" asp-controller="Items" asp-action="Create">Create</a>
</div>